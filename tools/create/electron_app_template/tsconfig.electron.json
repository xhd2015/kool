{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist-electron",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "electron/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "src",
        "node_modules",
        "dist",
        "dist-electron"
    ]
}